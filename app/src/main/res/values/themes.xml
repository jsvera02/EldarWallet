<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.EldarWallet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryVariant">@color/darkBlueEldar</item>
        <item name="colorOnPrimary">@color/darkBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkerBlueSecondary</item>
        <item name="colorSecondaryVariant">@color/darkBlueEldar</item>
        <item name="colorOnSecondary">@color/darkBlue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkBlue</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/CustomEditTextStyle</item>

    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.EldarWallet" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/bluePrimary</item>
        <item name="colorControlActivated">@color/bluePrimary</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_chat</item>

        <item name="android:windowBackground">@color/darkBlue</item>
        <item name="statusBarBackground">@color/darkBlue</item>
    </style>
    <style name="Theme.EldarWallet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_chat</item>

        <item name="android:windowBackground">@color/darkBlue</item>
        <item name="android:statusBarColor">@color/darkBlue</item>
        <item name="statusBarBackground">@color/darkBlue</item>
    </style>
</resources>